@model IEnumerable<musicly.Models.Instrument>

@{
    ViewData["Title"] = "Index";
}
<style>
    td{text-align:right}
    th{text-align:center}
</style>
<p>
    <a asp-action="Create">צור חדש</a>
</p>
<form asp-controller="Instruments" asp-action="Index" method="get">
    <input name="searchString" type="text" placeholder="שם פריט לחיפוש"/>
</form>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                פירוט
            </th>
            <th>
                מחיר
            </th>
            <th>
                נתיב תמונה
            </th>
            <th>
                סוג
            </th>
            <th>
                שם
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">ערוך</a> |
                <a asp-action="Details" asp-route-id="@item.Id">פרטים</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">מחק</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstrumentType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

        </tr>
}
    </tbody>
</table>
