@model musicly.Models.Instrument

@{
    ViewData["Title"] = "Details";
}
<style>
    dt {
        float: right !important;
    }

    dd {
        text-align: right;
    }
</style>
<h2 style="text-align:right">פרטים</h2>

<div>
    <h4 style="text-align:right">כלי נגינה</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            שם
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            מידע
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
           מחיר
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            נתיב תמונה
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt>
           סוג
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InstrumentType.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">ערוך</a> |
    <a asp-action="Index">חזרה לרשימה</a>
</div>
