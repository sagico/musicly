@model IEnumerable<musicly.Models.InstrumentOrder>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="InstrumentOrders" asp-action="Index" method="get">
    <input name="searchId" type="text" placeholder="order id here" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InstrumentOrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InstrumentOrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InstrumentOrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
