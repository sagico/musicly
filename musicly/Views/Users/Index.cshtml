@model IEnumerable<musicly.Models.User>

@{
    ViewData["Title"] = "Index";
}

<style>
    th{
        text-align:right;
    }
    td{
        text-align:right;
    }
</style>

<p>
    <a asp-action="Create">יצירה</a>
</p>
<form asp-controller="Users" asp-action="Index" method="get">
    <input name="searchString" type="text" placeholder="שם פרטי כאן" />
</form>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                מנהל
            </th>
            <th>
                עיר
            </th>
            <th>
                תאריך לידה
            </th>
            <th>
                שם משפחה
            </th>
            <th>
                שם פרטי
            </th>
            <th>
                סיסמא
            </th>
            <th>
                שם משתמש
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">ערוך</a> |
                <a asp-action="Details" asp-route-id="@item.Id">פרטים</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">מחיקה</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                ********
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
        </tr>
}
    </tbody>
</table>
