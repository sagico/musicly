@model IEnumerable<musicly.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ההזמנות שלי</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                תאריך הזמנה
            </th>
            <th>
                כלי
            </th>
            <th>
                כמות
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
            </tr>
            @foreach (var instrumentOrder in item.InstrumentOrders)
            {
                <tr>
                    <td></td>
                    <td>
                        @Html.DisplayFor(modelItem => instrumentOrder.Instrument.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => instrumentOrder.Quantity)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
