@model IEnumerable<musicly.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td{text-align:right}
    th{text-align:center;}
</style>
<h2 style="text-align:right">הזמנות</h2>
<form asp-controller="Orders" asp-action="Index" method="get">
    <input name="searchId" type="text" placeholder="מזהה הזמנה כאן" />
</form>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                תאריך הזמנה
            </th>
            <th>
                שם משתמש
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">מידע</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">מחיקה</a> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
        </tr>
}
    </tbody>
</table>
